{
  "name": "@simwai/utils",
  "version": "2.0.10",
  "description": "",
  "files": [
    "build"
  ],
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    }
  },
  "scripts": {
    "format": "xo . --fix --prettier",
    "start": "tsx src/index.ts",
    "debug": "tsx --inspect --trace-warnings ./src/index.ts",
    "always-debug": "tsx watch --ignore ./test --inspect --trace-warnings ./src/index.ts",
    "stop-debug": "fkill node.exe --force",
    "test": "npm run build && ava",
    "build": "unbuild",
    "pre-publish": "npm run format && npm run test",
    "publish:patch": "npm version patch && npm publish --access=public",
    "publish:minor": "npm version minor && npm publish --access=public",
    "publish:major": "npm version major && npm publish --access=public",
    "prepare": "husky"
  },
  "keywords": [
    "ts"
  ],
  "author": "simwai",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "chalk": "^5.3.0",
    "luxon": "^3.5.0",
    "neverthrow": "^7.0.1",
    "pretty-format": "^30.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@sindresorhus/tsconfig": "^5.0.0",
    "@types/luxon": "^3.4.2",
    "@types/pretty-format": "^20.0.1",
    "@types/sinon": "^17.0.3",
    "ava": "^6.1.3",
    "fkill-cli": "^8.0.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "sinon": "^18.0.0",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "unbuild": "^3.6.1",
    "vite": "^7.1.6",
    "xo": "^1.2.2"
  },
  "engines": {
    "node": ">=20"
  },
  "ava": {
    "files": [
      "./src/test/**/*.test.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false
    },
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": false,
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "files": [
      "./src/**/*.ts"
    ],
    "rules": {
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/consistent-type-imports": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/prefer-promise-reject-errors": "off",
      "import/extensions": "off",
      "max-params": "off",
      "new-cap": "off",
      "no-await-in-loop": "off",
      "unicorn/numeric-separators-style": "off",
      "unicorn/prefer-array-some": "off",
      "unicorn/prefer-module": "off",
      "ava/use-test": "off"
    }
  }
}
